$TTL 86400      ; 1 day
$ORIGIN {{ dns_zone_name }}.
@      IN     SOA  ns1.{{ dns_zone_name }}. root.{{ dns_zone_name }}. (
                                1          ; serial
                                60         ; refresh (1 minute)
                                60         ; retry (1 minute)
                                60         ; expire (1 minute)
                                60         ; minimum (1 minute)
                                )
       IN     NS        ns1.{{ dns_zone_name }}.
ns1    IN     A         {{ guest_custom_ip }}
